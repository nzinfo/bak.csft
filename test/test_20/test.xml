<?xml version="1.0" encoding="utf-8"?>
<test>

<name>groupby</name>

<config>
indexer
{
	mem_limit		= 16M
}

searchd
{
	<searchd_settings/>
}

source srctest
{
	type			= mysql
	<sql_settings/>

	sql_query_pre 	= set time_zone='+0:00'
	sql_query		= SELECT document_id, tag, UNIX_TIMESTAMP(time) as time, mva, body FROM test_table
	sql_attr_uint	= tag
	sql_attr_timestamp = time
	sql_attr_multi	= uint mva from field;
}

index test
{
	source			= srctest
	path			= <data_path/>/test
	min_word_len	= 1
	min_prefix_len	= 1
	enable_star		= 1
    charset_type 	= utf-8
}
</config>

<queries>
<query mode="extended2" groupattr="tag" groupfunc="attr" groupsort="@group desc"></query>
<query mode="extended2" groupattr="tag" groupfunc="attr" groupsort="@group asc"></query>
<query mode="extended2" groupattr="tag" groupfunc="attr" groupsort="@count desc"></query>
<query mode="extended2" groupattr="tag" groupfunc="attr" groupsort="@count asc"></query>
<query mode="extended2" groupattr="tag" groupfunc="attr" groupsort="tag desc"></query>
<query mode="extended2" groupattr="time" groupfunc="day">test*</query>
<query mode="extended2" groupattr="time" groupfunc="week">test*</query>
<query mode="extended2" groupattr="time" groupfunc="month">test*</query>
<query mode="extended2" groupattr="time" groupfunc="year">test*</query>
<query mode="extended2" groupattr="mva" groupfunc="attr" groupsort="@group desc" resarray="1">test*</query>
<query mode="extended2" groupattr="mva" groupfunc="attr" groupsort="@group asc" resarray="1">test*</query>
</queries>

<db_create>
CREATE TABLE `test_table`
(
	`document_id` int(11) NOT NULL default '0',
	`tag` int(11) NOT NULL default '0',
	`time` datetime,
	`mva` varchar(255) NOT NULL default '',
	`body` varchar(255) NOT NULL default ''
)
</db_create>

<db_drop>
DROP TABLE IF EXISTS `test_table`
</db_drop>

